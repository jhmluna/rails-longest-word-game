<h1>New game</h1>

<ul class="col-lg-6">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method='post' class="col-lg-6">
  <label for="askInput" class="form-label">What is the longest word you can find?</label>
  <div class="input-group mb-3">
    <input type="text" class="form-control" id="askInput" name="word">
    <button class="btn btn-outline-secondary btn-lg" type="submit" value="play">Play</button>
  </div>
  <%= hidden_field_tag 'grid', @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
